@model IEnumerable<CapstoneProject.DomainModels.ToDoList>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
        <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">Capstone Project </h1>

    <div class="col mb-3">
        <a asp-controller="ToDoList" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add ToDoList</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">ToDoList Name</th>
                <th scope="col">Date of Creation</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                    <tr>
                        <td width="50%">
                        @item.Name
                        </td>
                        <td width="50%">
                        @item.CreatedDate
                        </td>
                        <td>
                            <div role="group" class="w-60 btn-group">
                                <a asp-controller="ToDoList" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>More</a>&nbsp;
                                <a asp-controller="ToDoList" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
